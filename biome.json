{
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "lineWidth": 120
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "style": {
        "useEnumInitializers": "off",
        "noInferrableTypes": "off",
        "useTemplate": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off",
        "useExponentiationOperator": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off"
      }
    }
  },
  "files": {
    "ignore": ["examples", "./dist", ".vscode"]
  }
}
